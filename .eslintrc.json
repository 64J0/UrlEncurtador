{
    "env": {
        "es2021": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "quotes": ["error", "double"],
        "no-console": "off",
        "class-methods-use-this": "off"
    },
    "settings": {
        "import/extensions": {
            "extensions": [".js", ".ts", ".ejs"]
        }
    }
}
